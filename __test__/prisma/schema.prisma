generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./test.db"
}

model Company {
    id      String @id @default(uuid())
    name    String
    website String @default("")
    size    Int    @default(0)
    job     Job[]
    User    User   @relation(fields: [userId], references: [id])
    userId  String

    @@map("companies")
}

model Job {
    id        String   @id @default(uuid())
    name      String
    status    Int
    level     Int
    appliedAt DateTime @default(now())
    company   Company  @relation(fields: [companyId], references: [id])
    companyId String
    user      User     @relation(fields: [userId], references: [id])
    userId    String

    @@map("jobs")
}

model User {
    id          String    @id @default(uuid())
    email       String    @unique
    firstName   String
    lastName    String
    password    String
    tokenSecret String
    role        Int       @default(1)
    jobs        Job[]
    companies   Company[]

    @@map("users")
}
